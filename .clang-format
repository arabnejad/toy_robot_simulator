BasedOnStyle: LLVM

IndentWidth: 2               # Default LLVM indent is 2 spaces
TabWidth: 2
UseTab: Never                # Always use spaces
ColumnLimit: 120             # Allow longer lines (LLVM prefers 120+)

PointerAlignment: Right      # `int *ptr` instead of `int* ptr`
AllowShortFunctionsOnASingleLine: Empty
BreakBeforeBraces: Attach    # Keep braces on the same line
SpaceBeforeParens: ControlStatements
AlwaysBreakAfterReturnType: None
AllowShortEnumsOnASingleLine: false # Ensure short enums are NOT kept on a single line

# Optional extras
AlignConsecutiveDeclarations: true
AlignConsecutiveAssignments: true


# include handling
SortIncludes: true      # Turn on include sorting
IncludeBlocks: Regroup  # regroup includes into categories with blank lines between them
IncludeCategories:      # Define categories: lower Priority comes first
  - Regex: '^<.*>$'     # system headers: angle brackets
    Priority: 1
  - Regex: '^".*"$'     # project/app headers: quotes
    Priority: 2


# Put each initializer on its own line (or keep all on one line if it fits)
ConstructorInitializerAllOnOneLineOrOnePerLine: true
# Comma-first style:
BreakConstructorInitializers: BeforeComma
# (Optional) control indent of the initializer lines
ConstructorInitializerIndentWidth: 2